<h2>Edite product</h2>

<%= form_with model: @product, url:seller_path(@product.id), method: :patch do |f|%>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :stock %><br />
    <%= f.number_field :stock %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>


  <div class="actions">
    <%= f.submit "update" %>
  </div>
<% end %>

